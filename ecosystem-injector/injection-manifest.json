  "injection_rules": {
    "mode": "additive_only",
    "never_remove": true,
    "merge_strategy": {
      "html": "insert_before_closing_tag",
      "js": "append_with_namespace",
      "json": "deep_merge",
      "css": "append_with_scope"
    },
    "rollback": {
      "enabled": true,
      "backup_before_inject": true,
      "max_rollback_history": 10
    }
  },
  "cross_links": {
    "all_repos_to_legend_core": true,
    "pricing_repos_to_treasury": true,
    "login_repos_to_login_core": true,
    "brain_111_showcases_all": true
